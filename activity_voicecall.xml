<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7ECEC"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Placeholder for remote user's profile image or video view (if applicable) -->
        <ImageView
            android:id="@+id/remote_user_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_shapes" />

        <!-- Button to mute/unmute microphone -->
        <Button
            android:id="@+id/mute_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remote_user_profile_image"
            android:layout_alignStart="@id/remote_user_profile_image"
            android:layout_marginTop="20dp"
            android:text="Mute"
            android:onClick="toggleMute" />

        <!-- Button to end the call -->
        <Button
            android:id="@+id/leavecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remote_user_profile_image"
            android:layout_alignEnd="@id/remote_user_profile_image"
            android:layout_marginTop="20dp"
            android:text="End Call"
            android:onClick="endCall" />

    </RelativeLayout>
</ScrollView>




